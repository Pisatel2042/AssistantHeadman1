<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssistantHeadman.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            
            
            <Label 
     Text="Помощник Старосты" 
     TextDecorations="Underline" 
     FontSize="25" 
     TextTransform="Uppercase" 
     Margin="60,25,60,0" 
     HeightRequest="100"   
  />

            <Entry 
     x:Name="PasswordLabel"
     IsPassword="True" 
     Placeholder="Enter password"
     Margin="20,150,20,5" 
     HeightRequest="50" 
 />

            <Editor
     x:Name="EmailLabel"           
     Placeholder="Enter Email" 
     Margin="20,0,20,5"
     HeightRequest="50" 
 />

            <Button 
     x:Name="ButtonEnter" 
     Text="Войти "  
     FontSize="15"   
     Margin="50,200,50,0" 
     HeightRequest="100" 
     Clicked="GoToMain"
    
 />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>